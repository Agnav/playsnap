{
    "manifest_version": 3,
    "name": "Saavn auto downloader",
    "version": "1.0",
    "description": "Automaticall download songs as you stream !",
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "<all_urls>",
      "activeTab",
      "scripting",
      "downloads"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "<all_urls>",
      "https://www.jiosaavn.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      "default_title": "Saavn Auto Downloader"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  